{
    "rewrites": [
        {
            "source": "/sitemap.xml",
            "has": [
                {
                    "type": "host",
                    "value": "staging.learning.edubot.it.com"
                }
            ],
            "destination": "https://api.staging.learning.edubot.it.com/sitemap.xml"
        },
        {
            "source": "/sitemap.xml",
            "destination": "https://api.learning.edubot.it.com/sitemap.xml"
        },
        {
            "source": "/(.*)",
            "destination": "/"
        }
    ],
    "headers": [
        {
            "source": "/sitemap.xml",
            "headers": [
                {
                    "key": "Content-Type",
                    "value": "application/xml"
                }
            ]
        },
        {
            "source": "/assets/(.*)",
            "headers": [
                {
                    "key": "Cache-Control",
                    "value": "public, max-age=31536000, immutable"
                }
            ]
        },
        {
            "source": "/(.*).(css|js|woff2|svg|png|jpg|jpeg|webp|gif|ico)",
            "headers": [
                {
                    "key": "Cache-Control",
                    "value": "public, max-age=31536000, immutable"
                }
            ]
        },
        {
            "source": "/",
            "headers": [
                {
                    "key": "Cache-Control",
                    "value": "public, max-age=60, stale-while-revalidate=300"
                }
            ]
        }
    ]
}